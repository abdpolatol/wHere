<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/imageView1"
        
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:src="@drawable/logo"
        android:layout_width="150dp"
        android:layout_height="150dp" />
    
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/signUp"
   
    
        android:layout_marginLeft="55dp"
        android:layout_marginRight="10dp"
        
        android:text="Not a registered user yet?" 
        android:textColor="#ffffff"/>

    <TextView
        android:id="@+id/signUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="14dp"
        android:layout_toRightOf="@+id/textView2"
        
        android:text="Sign up now!"
        android:textColor="#2176ff" />

    <EditText
        android:id="@+id/usernameMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/passwordMain"
        android:layout_alignRight="@+id/passwordMain"
        android:layout_below="@+id/imageView1"
        android:layout_marginTop="55dp"
        android:paddingLeft="4dp"
        android:background="@drawable/back"
        android:ems="10"
        android:inputType="textPersonName"
        android:singleLine="true"
        android:textColor="#000000"
         >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginbutton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="or"
        android:textSize="20sp" 
        android:textColor="#ffffff"
        />

    <com.facebook.widget.LoginButton
        android:id="@+id/authButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/loginbutton"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_below="@+id/passwordMain"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#1B4708"
        android:shadowDx="0"
        android:shadowDy="5"
        android:shadowRadius="3"
        android:text="Login"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/passwordMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/usernameMain"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/back"
        android:ems="10"
        android:paddingLeft="4dp"
        android:inputType="textPassword"
        android:textColor="#000000" />

</RelativeLayout>